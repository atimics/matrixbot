# Event-Driven AI Bot Configuration
# Copy this to .env and configure your settings

# OpenRouter API for AI decision making
OPENROUTER_API_KEY=your_openrouter_api_key_here
AI_MODEL=anthropic/claude-3-5-sonnet-20241022

# Matrix Configuration
MATRIX_HOMESERVER=https://matrix.org
MATRIX_USERNAME=@your_bot:matrix.org
MATRIX_PASSWORD=your_matrix_password

# Farcaster Configuration (optional)
FARCASTER_API_KEY=your_neynar_api_key_here
FARCASTER_FIDS=123,456,789  # Comma-separated list of user IDs to monitor
FARCASTER_CHANNELS=dev,warpcast  # Comma-separated list of channels to monitor

# System Configuration
OBSERVATION_INTERVAL=30  # How often to check for new messages (seconds)
MAX_CYCLES_PER_HOUR=60   # Rate limiting for AI decision cycles
LOG_LEVEL=INFO

# Database (optional, defaults to in-memory)
DATABASE_PATH=world_state.db
