# Environment configuration for Ratimics Chatbot
# Copy this file to .env and fill in your actual values

# Chatbot Configuration
OBSERVATION_INTERVAL=2
MAX_CYCLES_PER_HOUR=300
AI_MODEL=openai/gpt-4o-mini

# Matrix Configuration (Required)
MATRIX_HOMESERVER=https://chat.ratimics.com
MATRIX_USER_ID=@ratichat:chat.ratimics.com
MATRIX_PASSWORD=your_matrix_password_here
MATRIX_ROOM_ID=#robot-laboratory:chat.ratimics.com
MATRIX_DEVICE_ID=
DEVICE_NAME=ratichat_bot

# OpenRouter API (Required)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Farcaster Configuration (Optional)
NEYNAR_API_KEY=your_neynar_api_key_here

# Logging
LOG_LEVEL=INFO

# Database
CHATBOT_DB_PATH=/app/data/chatbot.db
