FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    curl \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install additional test dependencies
RUN pip install pytest pytest-asyncio pytest-mock pytest-cov

# Copy source code
COPY chatbot/ ./chatbot/
COPY tests/ ./tests/
COPY pyproject.toml .
COPY pytest.ini .

# Create data directory for test outputs
RUN mkdir -p data/test_results

# Set environment variables for testing
ENV PYTHONPATH=/app
ENV LOG_LEVEL=DEBUG
ENV CHATBOT_DB_PATH=:memory:
ENV AI_DUMP_PAYLOADS_TO_FILE=false

# Default command runs all tests
CMD ["pytest", "-v", "--tb=short", "--cov=chatbot", "--cov-report=term-missing", "tests/"]
